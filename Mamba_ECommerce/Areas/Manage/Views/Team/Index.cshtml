@model PaginatedList<Team>
@{
    int count = (Model.ActivePage - 1) * 3;
}
<div class="card-body">
    <h4 class="card-title">Models/Team/Table</h4>
    <div class="table-responsive">
        <table class="table">
            <a asp-action="create" asp-controller="team" class="btn btn-outline-success"><i class="mdi mdi-plus"></i>Create</a>
            <thead>
                <tr>
                    <th>№</th>
                    <th>ID</th>
                    <th>Image</th>
                    <th>Fullname</th>
                    <th>Position</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Team teamMember in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@teamMember.Id</td>
                        <td>
                            <div class="pic">
                                <img style="width: 100px;height: 100px;" src="~/uploads/team/@teamMember.ImageName" class="img-fluid" alt="">
                            </div>
                        </td>
                        <td>@teamMember.Fullname</td>
                        <td><label class="badge badge-info">@teamMember.Position.Name</label></td>
                        <td>
                            <a asp-action="update" asp-controller="team" asp-route-id="@teamMember.Id" class="btn btn-outline-primary"><i class="mdi mdi-table-edit"></i>Update</a>
                            <a asp-action="softdelete" asp-controller="team" asp-route-id="@teamMember.Id" class="btn btn-outline-danger"><i class="mdi mdi-delete"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            @if (Model.PreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-route-page="@(Model.ActivePage-1)">Previous</a>
                </li>
            }
            @for (int i = 1; i <= Model.TotalPageCount; i++)
            {
                <li class="page-item  @(Model.ActivePage==i?"active":"")"><a class="page-link" asp-route-page="@i">@i</a></li>
            }
            @if (Model.NextPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-route-page="@(Model.ActivePage+1)">Next</a>
                </li>
            }
        </ul>
    </nav>
</div>